<div class="profile_form_wrapper doctor_form_wrapper ">
	<h2 class="profile_head">Doctor Profile</h1>
	<h2><%= @doctor.name %> | <%= @doctor.category.name.capitalize %></h1>
	<div><b>Email: </b><%= @doctor.email%></div>
	<div><b>Description: </b><%= @doctor.description ? @doctor.description : "No description" %></div>
	<% if @doctor == current_doctor %>
		<div class="hoverable profile_button"><%= link_to "Edit profile", edit_doctor_registration_path %></div>
	<% end %>
	<% if patient_signed_in? %>
		<div class="hoverable profile_button"><%= link_to "Apply", new_appointment_path(:doctor_id => @doctor.id) %></div>
	<% end %>
</div>